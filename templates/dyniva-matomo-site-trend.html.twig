{{ attach_library('dyniva_ui/echart') }}
{{ attach_library('dyniva_matomo/wrapper') }}
{{ attach_library('dyniva_matomo/trend') }}

<div class="dyniva_matomo_wrapper">
  <div id="trend-echart-1" class="echart" data-init="{{ content_json }}"></div>

  <table class="table-2">
    <thead>
    <tr>
        <th rowspan="2">日期</th>
        <th colspan="3" rowspan="1">网站基础指标</th>
        <th colspan="2" rowspan="1">流量质量指标</th>
    </tr>
    <tr>
        <th>浏览量(PV)</th>
        <th>访问量(UV)</th>
        <th>IP数</th>
        <th>跳出率</th>
        <th>平均访问时长</th>
    </tr>
    </thead>
    <tbody>
    {% if content is empty %}
        <tr>
            <td colspan="5">{{ "没有查询到数据。"|t }}</td>
        </tr>
    {% else %}
        {% for item in content %}
            <tr>
                <td>{{ item.date }}</td>
                <td>{{ item.nb_actions }}</td>
                <td>{{ item.nb_visits }}</td>
                <td>{{ item.nb_uniq_visitors }}</td>
                <td>{{ item.bounce_rate }}</td>
                <td>{{ item.avg_time_on_site|visits_time_transform }}</td>
            </tr>
        {% endfor %}
    {% endif %}
    </tbody>
  </table>
</div>
{# {{ content_json }} #}
