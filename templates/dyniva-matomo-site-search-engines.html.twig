
{{ attach_library('dyniva_matomo/wrapper') }}
<div class="dyniva_matomo_wrapper">
  <div class="site-search-engines">
    <div class="card-1">
    {% if config.page_block == 1 %}
    <div class="card-header">
        <h3>来源 Top10</h3>
        <div class="ext">{{ full_link }}</div>
    </div>
    <div class="spacer"></div>
    <table class="table-2">
        <thead>
        <tr>
            <th>排名</th>
            <th>来源</th>
            <th>浏览量(PV)</th>
            <th>访问量(UV)</th>
        </tr>
        </thead>
        <tbody>
        {% if content is empty %}
            <tr>
                <td colspan="4">{{ "没有查询到数据。"|t }}</td>
            </tr>
        {% else %}
            {% for item in content %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ item.label }}</td>
                    <td>{{ item.nb_actions }}</td>
                    <td>{{ item.nb_visits }}</td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
    {% else %}
        <table class="table-2">
            <thead>
            <tr>
                <th rowspan="2">搜索引擎</th>
                <th colspan="3" rowspan="1">网站基础指标</th>
                <th colspan="2" rowspan="1">流量质量指标</th>
            </tr>
            <tr>
                <th>浏览量(PV)</th>
                <th>访问量(UV)</th>
                <th>IP数</th>
                <th>跳出次数</th>
                <th>访问时长</th>
            </tr>
            </thead>
            <tbody>
            {% if content is empty %}
                <tr>
                    <td colspan="5">{{ "没有查询到数据。"|t }}</td>
                </tr>
            {% else %}
                {% for item in content %}
                    <tr>
                        <td>{{ item.label }}</td>
                        <td>{{ item.nb_actions }}</td>
                        <td>{{ item.nb_visits }}</td>
                        <td>{{ item.nb_users }}</td>
                        <td>{{ item.bounce_count }}</td>
                        <td>{{ item.sum_visit_length|visits_time_transform }}</td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    {% endif %}
    </div>
  </div>
</div>

